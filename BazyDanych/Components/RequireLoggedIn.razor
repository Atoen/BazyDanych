@using BazyDanych.Data.Models
@using BazyDanych.Services

@if (!UserService.IsAuthenticated)
{
    <RedirectToLogin />
}
else if (RequiredPermissions is not null 
         && !RequiredPermissions.Contains(UserService.EmployeePermissions!))
{
    <RedirectToUnauthorized />
}

@inject UserService UserService

@code {
    [Parameter] public List<PermissionsModel>? RequiredPermissions { get; set; }
}
